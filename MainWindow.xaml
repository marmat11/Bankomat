        <Button x:Name="B0" Content="0" HorizontalAlignment="Left" Height="49" Margin="615,276,0,0" VerticalAlignment="Top" Width="53" FontSize="24" Click="BNumer_Click"/>
            <Button x:Name="BZamknij" Content="Zamknij" HorizontalAlignment="Left" Height="40" Margin="641,370,0,0" VerticalAlignment="Top" Width="105" FontSize="20" Click="BZamknij_Click"/>
            <Button x:Name="BZaloguj" Content="Zaloguj" HorizontalAlignment="Left" Height="40" Margin="155,285,0,0" VerticalAlignment="Top" Width="105" FontSize="20" Click="BZaloguj_Click"/>
            <Label x:Name="LabNumer" Content="Numer karty:" HorizontalAlignment="Left" Height="29" Margin="82,134,0,0" VerticalAlignment="Top" Width="118" FontSize="16" FontWeight="Bold"/>
