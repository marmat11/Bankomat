        <Button x:Name="B3" Content="3" HorizontalAlignment="Left" Height="49" Margin="693,61,0,0" VerticalAlignment="Top" Width="53" FontSize="24" Click="BNumer_Click"/>
        <Button x:Name="B4" Content="4" HorizontalAlignment="Left" Height="49" Margin="541,134,0,0" VerticalAlignment="Top" Width="53" FontSize="24" Click="BNumer_Click"/>
        <Button x:Name="B7" Content="7" HorizontalAlignment="Left" Height="49" Margin="541,205,0,0" VerticalAlignment="Top" Width="53" FontSize="24" Click="BNumer_Click"/>
        <Button x:Name="B5" Content="5" HorizontalAlignment="Left" Height="49" Margin="615,134,0,0" VerticalAlignment="Top" Width="53" FontSize="24" Click="BNumer_Click"/>
