            <TextBox x:Name="TbLogin" HorizontalAlignment="Left" Height="29" Margin="241,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136" Text="1234567890123456"/>
            <PasswordBox x:Name="PbHasło" HorizontalAlignment="Left" Margin="241,205,0,0" VerticalAlignment="Top" Width="136" Height="29" MaxLength="4" Password="1234"/>
            <Button x:Name="BKarta" Content="Włóż karte" HorizontalAlignment="Left" Height="35" Margin="82,61,0,0" VerticalAlignment="Top" Width="118" FontSize="20" Click="BKarta_Click"/>
            <Label x:Name="LabWłóżkarte" Content="Włóż karte:" HorizontalAlignment="Left" Margin="82,19,0,0" VerticalAlignment="Top" Width="276" FontSize="20"/>
            <Label x:Name="LabKarta" Content="Brak karty" HorizontalAlignment="Left" Height="35" Margin="241,61,0,0" VerticalAlignment="Top" Width="136" FontSize="20" IsEnabled="False"/>
        <Button x:Name="BCofnij" Content="Cofnij" HorizontalAlignment="Left" Margin="407,135,0,0" VerticalAlignment="Top" Width="91" Height="28" FontSize="20" Click="BCofnij_Click"/>

